.chat-main
  .main-header
    .main-header-item
      .main-header-item-name
        .main-header-item-name-test
          =@group.name
        .main-header-item-name-left
          .main-header-item-name-left-box
            Member :
            -@group.users.each do |user|
              =user.name
            .main-header-item-name-left-right
      = link_to edit_group_path(@group) do
        Edit
  .messages
    = render @messages
    .messages-item
      .messages-item-name
        .messages-item-name-left
          masa
        .messages-item-name-right
          2019/11/20/(Wed) 17:02:10
      .messages-item-comments
        おはよう!
  .form
    = form_for [@group, @message] do |f|
      .form-name
        = f.text_field :content, class: 'form-name-text', placeholder: 'type a message'
        .form-name-btn
          = f.label :image, class: 'a' do
            = icon('fa', 'image')
            = f.file_field :image, class: 'file'
      = f.submit 'Send', class: 'form-btn'